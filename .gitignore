# Keep custom themes and plugins
!wp-content/themes/
!wp-content/plugins/

# Configuration files
wp-config.php
wp-config-local.php
wp-config-production.php

# WordPress specific files
.htaccess
sitemap.xml
sitemap.xml.gz

# Log files
*.log
error_log
access_log

# Cache files
/wp-content/cache/
/wp-content/uploads/cache/

# Backup files
*.bak
*.backup
*.tmp
*~

